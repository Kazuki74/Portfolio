<p> <%= image_tag @portfolio.thumb_image unless @portfolio.thumb_image.nil?  %> </p>
<h1> <%= @portfolio.title %> </h1>
<em> <%= @portfolio.subtitle %> </em>
<p> <%= @portfolio.body %> </p>
<h2>Technologies Used:</h2>
	<% if @portfolio.technologies.present? %>
		<% @portfolio.technologies.each do |p| %>
			<li> <%= @portfolio.technologies.name %> </li>
		<% end %>
	<% end %>
<p> <%= link_to 'Edit', edit_portfolio_path(@portfolio) if logged_in?(:site_admin) %> </p>
<p> <%= link_to 'Delete', portfolio_path(@portfolio), method: :delete, data: { confirm: "Are you sure?" } if logged_in?(:site_admin) %> </p>